# TrendAgent API Configuration
# Добавить эти переменные в .env файл

# ===================================
# API Domains (опционально, есть дефолты)
# ===================================
TRENDAGENT_API_DOMAIN=api.trendagent.ru
TRENDAGENT_PARKINGS_DOMAIN=parkings-api.trendagent.ru
TRENDAGENT_HOUSE_DOMAIN=house-api.trendagent.ru
TRENDAGENT_COMMERCE_DOMAIN=commerce-api.trendagent.ru
TRENDAGENT_APARTMENT_DOMAIN=apartment-api.trendagent.ru
TRENDAGENT_SSO_DOMAIN=sso-api.trend.tech
TRENDAGENT_VIDEO_DOMAIN=video.trendagent.ru
TRENDAGENT_FILES_DOMAIN=files.trendagent.ru

# ===================================
# Authentication (ОБЯЗАТЕЛЬНО)
# ===================================
TRENDAGENT_CLIENT_ID=66d84f584c0168b8ccd281c3
TRENDAGENT_CLIENT_SECRET=your_client_secret_here

# SSO User Credentials (для получения auth_token)
TRENDAGENT_USER_PHONE=+79045393434
TRENDAGENT_USER_PASSWORD=nwBvh4q

# ===================================
# API Configuration
# ===================================
TRENDAGENT_API_VERSION=v4_29
TRENDAGENT_API_TIMEOUT=30

# ===================================
# Default Settings
# ===================================
TRENDAGENT_DEFAULT_CITY=58c665588b6aa52311afa01b
TRENDAGENT_DEFAULT_LANG=ru

# ===================================
# Cache Configuration
# ===================================
TRENDAGENT_CACHE_DRIVER=redis
TRENDAGENT_CACHE_DICTIONARIES_TTL=86400
TRENDAGENT_CACHE_SLUG_MAPS_TTL=3600
TRENDAGENT_CACHE_AUTH_TOKEN_TTL=300
TRENDAGENT_CACHE_PREFIX=trendagent:

# ===================================
# Retry Configuration
# ===================================
TRENDAGENT_RETRY_MAX_ATTEMPTS=3
TRENDAGENT_RETRY_INITIAL_DELAY_MS=1000
TRENDAGENT_RETRY_MAX_DELAY_MS=10000

# ===================================
# Pagination
# ===================================
TRENDAGENT_PAGE_SIZE=20
TRENDAGENT_MAX_PAGE_SIZE=100

# ===================================
# Logging
# ===================================
TRENDAGENT_LOGGING_ENABLED=true
TRENDAGENT_LOG_CHANNEL=stack
TRENDAGENT_LOG_REQUESTS=false
TRENDAGENT_LOG_RESPONSES=false
